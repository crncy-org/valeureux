<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Shop Locator</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'home', :action => 'index' %>">Home</a>
      </li>
      <li class="active">
        <strong>Shop Locator</strong>
      </li>
    </ol>
  </div>
</div>


<div class="row">
    <div class="col-lg-12">

        <div class="ibox chat-view">

            <div class="ibox-title">
                <small class="pull-right text-muted">Last update:  Fri Mar 13 2015 - 10:39:23</small>
                Pick a shop
            </div>


            <div class="ibox-content">

                <div class="row">

                    <div class="col-md-7 ">
                        <div class="chat-discussion">

                            <div class="chat-message">
                                <img class="message-avatar" src="<%= image_path('a1.jpg') %>" alt="">
                                <div class="message">
                                    <a class="message-author" href="#"> Michael Smith </a>
                                    <span class="message-date"> Mon Jan 26 2015 - 18:39:23 </span>
                                        <span class="message-content">
                                            Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
                                        </span>
                                </div>
                            </div>
                            <% @shops.each do |s| %>
          <div class="col-sm-6">
            <div class="contact-box">
              <a href="<%= url_for :controller => 'home', :action => 'index' %>">
              <div class="col-sm-4">
                <div class="text-center">
                pic here
                </div>

              </div>
              <div class="col-sm-8">
                <h3><strong><%= s.shopname %></strong></h3>
                <p><i class="fa fa-map-marker"></i><%= s.address %></p>
                <p><%= s.description %></p>
                <abbr title="Phone">P:</abbr> <%= s.phone_number %>
              </div>
              <div class="clearfix"></div>
              </a>
            </div>
          </div>
          <% end %>


                        </div>

                    </div>
                    <div class="col-md-5">
                        <div class="chat-users">

                            <div class="users-list">
                                <div class="chat-user">
                                    <img class="chat-avatar" src="<%= image_path('a4.jpg') %>" alt="">
                                    <div class="chat-user-name">
                                        <a href="#">Karl Jordan</a>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="chat-message-form">

                            <div class="form-group">

                                <textarea class="form-control message-input" name="message" placeholder="Enter message text"></textarea>
                            </div>
                            <div style='width: 800px;'>
                              <div id="map" style='width: 800px; height: 400px;'></div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
  <div class="content-container">
    <div class="row">
      <div class="col-lg-7">
        <div class="row">
          <% @shops.each do |s| %>
          <div class="col-sm-6">
            <div class="contact-box">
              <a href="<%= url_for :controller => 'home', :action => 'index' %>">
              <div class="col-sm-4">
                <div class="text-center">
                pic here
                </div>

              </div>
              <div class="col-sm-8">
                <h3><strong><%= s.shopname %></strong></h3>
                <p><i class="fa fa-map-marker"></i><%= s.address %></p>
                <p><%= s.description %></p>
                <abbr title="Phone">P:</abbr> <%= s.phone_number %>
              </div>
              <div class="clearfix"></div>
              </a>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="map-wrapper">
          map here
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>
<script type="text/javascript">
$(function () {
$('.contact-box').each(function () {
animationHover(this, 'pulse');
});
});
</script>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<% end %>