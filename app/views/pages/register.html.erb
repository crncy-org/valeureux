<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <%= image_tag 'Icon-60@3x.png' %>
    </div>
    <h3>Welcome to le Valeureux</h3>
    <p>Because money <strong><i>needs</i></strong> a vision</p>
    <p>Create account to see it in action.</p>
    <br>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, class: "form-control", placeholder: "i.e. Frederic" %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, class: "form-control", placeholder: "i.e. Lambrechts" %>
    </div>
    <div class="field">
      <%= f.label :salutation %><br>
      <%= f.text_field :salutation, class: "form-control", placeholder: "i.e. mr., ms." %>
    </div>
    <div class="field">
      <%= f.label :phone_number %><br>
      <%= f.text_field :phone_number, class: "form-control", placeholder: "i.e. +3223456789" %>
    </div>
    <div class="field">
      <%= f.label :user_type %><br>
      <%= f.text_field :user_type, class: "form-control", placeholder: "i.e. Citizen" %>
    </div>
    <div class="field">
      <%= f.label :vat_number %><br>
      <%= f.text_field :vat_number, class: "form-control", placeholder: "i.e. BE12345678" %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "i.e. example@valeureux.com" %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary block full-width m-b" %>
    </div>
    <% end %>
    <p class="text-muted text-center"><small>Already have an account?</small></p>
    <a class="btn btn-sm btn-white btn-block" href="#">Login</a>
    <br>
    <br>
    <p class="m-t"> <small>Powered by <%= image_tag'crncy-logo.png', class: 'img-responsive' %> &copy; 2015</small> </p>
  </div>
</div>