<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
     <!-- Web application optimisation -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'favicon.ico' %>
    <link rel="apple-touch-icon" href="apple-touch-icon.png">

    <title>Valeureux</title>

    <!-- Main css styles -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Main javascript files -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

</head>
  <body class="landing-body">
  <div class="landing-container-fluid">
    <div class="row">
      <div class="col-xs-12 landing-banner">
        <div class="row">

        </div>
        <div class="row">
          <div class="landing-text-center col-xs-2">
            <%= link_to "/pages/shop_locator", class: 'landing-banner-icons' do %>
              <i class="fa fa-map-marker"></i>
            <% end %>

          </div>
          <div class="col-xs-6">

          </div>
          <div class="col-xs-2">
            <%= link_to "/users/sign_in", class: 'landing-banner-icons'  do %>
              <i class="fa fa-sign-in landing-banner-icons"></i>
            <% end %>
          </div>
          <div class="col-xs-2 landing-banner-text">
            <%= link_to "/pages/register", class: 'landing-banner-icons'  do %>
                <span class="nav-label"><strong>Sign up</strong></span>
                <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
        <%= image_tag(('homescreen.png'), class: "width-100") %>
      </div>
  </div>
  </body>
</html>