<%= simple_form_for(@topup) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.association :receiver %>
    <%= f.input :reference %>
    <%= f.input :status %>
    <%= f.association :admin_user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
